{
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  // Controls if the diff editor shows changes in leading or trailing whitespace as diffs
  "diffEditor.ignoreTrimWhitespace": false,
  // The path to the rules configuration file,
  // requires tshint extension
  "files.exclude": {
    "**/node_modules": false,
    "build": true,
    "**/obj": true,
    // Hide js test files created by tsc
    "**/*Tests/**/*Tests.js": {
      "when": "$(basename).ts"
    },
    // Hide E2E test folders
    "logs": true,
    "cst": true,
    // Hide PowerBIVisualsPlayground lib folder
    "src/clients/PowerBIVisuals/PowerBIVisualsPlayground/lib": true
  },
  "search.exclude": {},
  "typescript.tsdk": "./node_modules/typescript/lib",
  "html.format.wrapAttributes": "force",
  "git.ignoreLimitWarning": true,
  "json.schemas": [
    {
      "fileMatch": [
        "/pbiviz.json"
      ],
      "url": "./node_modules/powerbi-visuals-api/schema.pbiviz.json"
    },
    {
      "fileMatch": [
        "/capabilities.json"
      ],
      "url": "./node_modules/powerbi-visuals-api/schema.capabilities.json"
    },
    {
      "fileMatch": [
        "/dependencies.json"
      ],
      "url": "./node_modules/powerbi-visuals-api/schema.dependencies.json"
    }
  ],
}